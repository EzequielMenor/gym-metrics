<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="778.0" prefWidth="1205.0" stylesheets="@styles.css"
    xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.ezequiel.ui.MainController">
    <ComboBox fx:id="cmbEjercicios" layoutX="468.0" layoutY="173.0" onAction="#actualizarMetricas"
        prefHeight="25.0" prefWidth="269.0" promptText="Ejercicio" />

    <Label layoutX="474.0" layoutY="75.0" styleClass="main-title" text="GYM METRICS" />

    <LineChart fx:id="chartProgreso" layoutX="272.0" layoutY="227.0" prefHeight="333.0"
        prefWidth="661.0">
        <xAxis>
            <CategoryAxis fx:id="ejeXFechas" side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="ejeYPeso" side="LEFT" />
        </yAxis>
    </LineChart>

    <VBox layoutX="984.0" layoutY="243.0" prefHeight="259.0" prefWidth="198.0">
        <children>
            <Label prefWidth="156.0" styleClass="header-label" text="Récord de Peso Histórico" />

            <Label fx:id="lblMaxPeso" text="Label" />

            <Label styleClass="header-label" text="1RM Estimado" />

            <Label fx:id="lblEst1RM" text="Label" />

            <Label styleClass="header-label" text="Mejor Set por Volumen" />

            <Label fx:id="lblMaxVolumenSet" text="Label" />
        </children>
    </VBox>
</AnchorPane>